<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h1>
        <%= @user.email %>
      </h1>
      <h1>
        <%= @user.area %>
      </h1>
      <h1>
        <%= link_to pluralize(@user.following_users.count, "following"), following_user_path(@user) %>
      </h1>
      <h1>
        <%= link_to pluralize(@user.follower_users.count, "follower"), followers_user_path(@user) %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
